<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Dialog" parent="@android:style/Theme.Dialog" />

    <style name="ButtonBar" parent="@android:style/ButtonBar"></style>

    <style name="Button" parent="@android:style/Widget.Button"></style>

    <style name="ButtonBarContainer"></style>

    <style name="TooltipPopup" parent="android:Widget.TextView">
        <item name="android:gravity">center</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:minWidth">75dp</item>
        <item name="android:maxWidth">150dp</item>
        <item name="android:padding">6dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="ListItem">
        <item name="android:paddingTop">2dip</item>
        <item name="android:paddingBottom">2dip</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:paddingRight">8dip</item>
    </style>

    <style name="ContentLayout">
        <item name="android:paddingTop">6dip</item>
        <item name="android:paddingBottom">6dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
    </style>

    <style name="FieldLabel">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FieldLabelWithVerticalPadding" parent="@style/FieldLabel">
        <item name="android:paddingTop">6dip</item>
    </style>

    <style name="sectionHeader">
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

	<style name="subheader">
        <item name="android:textSize">14sp</item>
    </style>

</resources>